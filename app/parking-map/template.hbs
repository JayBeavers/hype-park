<div class='parking-list'>

  <div class="dropdown margin-t margin-b margin-r padding-lg-l">
    <div class='inline-b'>
      <span>Sort By:</span>
      <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
        {{currentFilter}}
        <span class="caret"></span>
      </button>

      <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
        <li><a class='pointer' {{action 'filterByDistance'}}>Distance</a></li>
        <li><a class='pointer' {{action 'filterByPrice'}}>Price</a></li>
      </ul>
    </div>
    <div class='inline-b padding-sm-l'>
      <span>Amenities</span>
      <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
        <span class="caret"></span>
      </button>

      <ul class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenu1">
        <li>
          <div class='padding-md-l'>
            <input type="checkbox" id='indoor'>
            <label for='indor'>Indoor</label>
          </div>
        </li>
        <li>
          <div class='padding-md-l'>
            <input type="checkbox" id='concierge'>
            <label for='concierge'>Concerige</label>
          </div>
        </li>
        <li>
          <div class='padding-md-l'>
            <input type="checkbox" id='surface'>
            <label for='surface'>Surface Lot</label>
          </div>
        </li>
        <li>
          <div class='padding-md-l'>
            <input type="checkbox" id='24'>
            <label for='24'>24/7</label>
          </div>
        </li>
      </ul>
    </div>
  </div>

  <div class="dropdown margin-t margin-b margin-r padding-lg-l">
  </div>

  <ol class="parking-list-group">
    {{#each sortedModel as |spot index|}}
      {{#unless spot.isSelected}}
        <li class="parking-list-group-item" {{action 'spotSelected' spot}}>
          <div class='parking-details'>
            <div>
              <h5 class='address'>
                <strong>{{convert-index index}}. {{spot.address}}</strong>
              </h5>
              <div class='price'>
                <span>
                  <strong>
                    <span class="text-lg">&#36;{{spot.price}}</span>/month</strong>
                </span>
              </div>
            </div>
            <div>
              <span class='miles'>{{spot.distance}} miles away</span>
              <button class="btn btn-xs btn-green pull-right">Select</button>
            </div>
          </div>
        </li>
      {{/unless}}
    {{/each}}
  </ol>
</div>
<div class='parking-map pull-left'>
  {{google-map
    alwaysAutoFitBounds=true
    autoFitBounds=true
    markers=markers
    type='road'
    gopt_scrollwheel=false
  }}
</div>
